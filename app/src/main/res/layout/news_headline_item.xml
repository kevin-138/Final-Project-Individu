<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="14dp"
    android:elevation="4dp"
 >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        android:background="@color/background4">

        <TextView
            android:id="@+id/tv_news_article_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="RONALDO JUST FELL AND HIS HEAD TO A FREAKIN ROCK JUST THIS MORNING."
            android:textSize="14sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_article_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="The Guardian"
            android:textColor="@color/lightPurple"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tv_news_article_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_news_detail"/>

        <TextView
            android:id="@+id/tv_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="19-20-2020"
            android:textSize="15sp"
            android:textColor="@color/gray3"
            app:layout_constraintTop_toBottomOf="@id/tv_article_author"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_news_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_more"
            android:textColor="@color/lightPurple"
            android:background="@drawable/article_button"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_news_article_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           />

        <TextView
            android:id="@+id/tv_no_headline_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_head"
            android:textColor="@color/lightPurple"
            android:textStyle="bold"
            android:textSize="25sp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>