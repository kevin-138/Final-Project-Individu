<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    tools:context=".presentation.view.explore.activity.LeagueStandingsActivity">

    <ImageButton
        android:id="@+id/ib_back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/arrrowssc"
        android:background="@color/transparant"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/iv_league_logo_standings"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:src="@drawable/team_logo_pc"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/ib_back_button"
        app:layout_constraintStart_toStartOf="@id/ib_back_button"
        />

    <TextView
        android:id="@+id/tv_league_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Parss sd sdsds"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/iv_league_logo_standings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_league_logo_standings"/>

    <TextView
        android:id="@+id/tv_league_country_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/country"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_league_name"
        app:layout_constraintStart_toStartOf="@+id/tv_league_name" />

    <TextView
        android:id="@+id/tv_league_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Cup"
        android:textColor="@color/lightPurple"
        android:textStyle="bold"
        android:layout_marginHorizontal="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/tv_league_name"
        app:layout_constraintTop_toTopOf="@id/tv_league_country_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_league_country_title"
        app:layout_constraintStart_toEndOf="@id/tv_league_country_title" />

    <TextView
        android:id="@+id/tv_league_type_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_league_country_title"
        app:layout_constraintStart_toStartOf="@+id/tv_league_name" />

    <TextView
        android:id="@+id/tv_league_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Cup"
        android:textColor="@color/lightPurple"
        android:textStyle="bold"
        android:layout_marginHorizontal="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/tv_league_name"
        app:layout_constraintTop_toTopOf="@id/tv_league_type_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_league_type_title"
        app:layout_constraintStart_toEndOf="@id/tv_league_type_title" />

    <TextView
        android:id="@+id/tv_league_spinner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/season"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_league_logo_standings"
        app:layout_constraintStart_toStartOf="@+id/iv_league_logo_standings" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_spinner"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tv_league_spinner_title"
        app:layout_constraintTop_toBottomOf="@id/tv_league_spinner_title">

        <Spinner
            android:id="@+id/sp_league_season"
            android:layout_height="45dp"
            android:layout_width="130dp"
            style="@style/Spinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_matches_league"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/matches"
        android:textAllCaps="false"
        android:textColor="@color/lightPurple"
        android:background="@drawable/article_button"
        android:textSize="18sp"
        android:paddingHorizontal="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toTopOf="@id/cs_spinner"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_league_standings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/standings"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/cs_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/hsv_standings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_league_standings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_standings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="horizontal"
            style="@style/scrollbar_style"
            tools:listitem="@layout/standing_list_item"/>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>