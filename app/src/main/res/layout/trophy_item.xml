<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/transparant"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background6"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_trophy_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/trophy_gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_trophies_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2nd Place"
            android:textColor="@color/lightPurple"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/iv_trophy_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/tv_trophies_league_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leaguetr"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_trophies_place"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_trophies_league"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ddsd"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            android:textStyle="bold"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/tv_trophies_league_title"
            app:layout_constraintTop_toTopOf="@id/tv_trophies_league_title"
            app:layout_constraintStart_toEndOf="@id/tv_trophies_league_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_trophies_country_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_trophies_league_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_trophies_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ddsd"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_trophies_country_title"
            app:layout_constraintTop_toTopOf="@id/tv_trophies_country_title"
            app:layout_constraintStart_toEndOf="@id/tv_trophies_country_title"/>

        <TextView
            android:id="@+id/tv_trophies_season_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/season"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_trophies_country_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_trophies_season"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="ddsd"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_trophies_season_title"
            app:layout_constraintTop_toTopOf="@id/tv_trophies_season_title"
            app:layout_constraintStart_toEndOf="@id/tv_trophies_season_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>