<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background1"
    tools:context=".presentation.view.trophies.activity.players.PlayersAchievementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/arrrowssc"
            android:background="@color/transparant"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_player_trophies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_trophies"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/ib_back_button"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_player_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/photo_pc"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_player_trophies_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_side"
            app:layout_constraintStart_toStartOf="@id/iv_player_photo"
            app:layout_constraintTop_toTopOf="@id/iv_player_photo"
            app:layout_constraintBottom_toBottomOf="@id/iv_player_photo"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_side"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="@id/iv_player_photo"
            app:layout_constraintTop_toTopOf="@id/iv_player_photo"
            app:layout_constraintBottom_toBottomOf="@id/iv_player_photo"/>

        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Elijandro Marquerez"
            android:textStyle="bold"
            android:textColor="@color/lightPurple"
            android:textSize="25sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/iv_player_photo"
            app:layout_constraintStart_toEndOf="@id/iv_player_photo"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_team_selected_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_selected"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_player_name"
            app:layout_constraintTop_toBottomOf="@id/tv_player_name" />

        <TextView
            android:id="@+id/tv_team_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="paris ssaag gernmasn"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_player_name"
            app:layout_constraintTop_toBottomOf="@id/tv_team_selected_title" />

        <TextView
            android:id="@+id/tv_player_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_player_photo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_player_firstname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_player_profile_title"
            app:layout_constraintTop_toBottomOf="@id/tv_player_profile_title" />

        <TextView
            android:id="@+id/tv_player_firstname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Bobberr"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_player_firstname_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_player_firstname_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_firstname_title"/>

        <TextView
            android:id="@+id/tv_player_lastname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_player_profile_title"
            app:layout_constraintTop_toBottomOf="@id/tv_player_firstname_title" />

        <TextView
            android:id="@+id/tv_player_lastname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_player_lastname_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_lastname_title"
            app:layout_constraintTop_toTopOf="@id/tv_player_lastname_title" />

        <TextView
            android:id="@+id/tv_player_age_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age2"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_player_profile_title"
            app:layout_constraintTop_toBottomOf="@id/tv_player_lastname_title" />

        <TextView
            android:id="@+id/tv_player_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_player_age_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_age_title"
            app:layout_constraintTop_toTopOf="@id/tv_player_age_title" />

        <TextView
            android:id="@+id/tv_player_birth_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_date"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_player_profile_title"
            app:layout_constraintTop_toBottomOf="@id/tv_player_age_title" />

        <TextView
            android:id="@+id/tv_player_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_player_birth_date_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_birth_date_title"
            app:layout_constraintTop_toTopOf="@id/tv_player_birth_date_title" />

        <TextView
            android:id="@+id/tv_player_nationality_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nationality"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_player_profile_title"
            app:layout_constraintTop_toBottomOf="@id/tv_player_birth_date_title" />

        <TextView
            android:id="@+id/tv_player_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_player_nationality_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_nationality_title"
            app:layout_constraintTop_toTopOf="@id/tv_player_nationality_title" />

        <TextView
            android:id="@+id/tv_player_height_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_player_profile_title"
            app:layout_constraintTop_toBottomOf="@id/tv_player_nationality_title" />

        <TextView
            android:id="@+id/tv_player_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_player_height_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_height_title"
            app:layout_constraintTop_toTopOf="@id/tv_player_height_title" />

        <TextView
            android:id="@+id/tv_player_weight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_player_profile_title"
            app:layout_constraintTop_toBottomOf="@id/tv_player_height_title" />

        <TextView
            android:id="@+id/tv_player_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textColor="@color/lightPurple"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_player_weight_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_weight_title"
            app:layout_constraintTop_toTopOf="@id/tv_player_weight_title" />


        <TextView
            android:id="@+id/tv_player_career_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/career"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_player_weight_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_in_team_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_team"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/tv_player_career_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_player_career_title"
            app:layout_constraintEnd_toStartOf="@id/iv_in_team"/>

        <ImageView
            android:id="@+id/iv_in_team"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/team_logo_pc"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/tv_in_team_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_in_team_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Border"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rv_player_career"
            app:layout_constraintBottom_toBottomOf="@id/rv_player_career"
            android:contentDescription="Border" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_player_career"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingHorizontal="20dp"
            android:clipToPadding="false"
            android:layout_marginTop="15dp"
            tools:listitem="@layout/player_career_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_in_team_title" />

        <TextView
            android:id="@+id/tv_player_trophies_rv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trophies_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_player_career"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rv_player_trophies"
            app:layout_constraintBottom_toBottomOf="@id/rv_player_trophies"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_player_trophies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_player_trophies_rv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/trophy_item"
            android:paddingHorizontal="30dp"
            android:clipToPadding="false"
            android:layout_marginBottom="30dp"/>







    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>