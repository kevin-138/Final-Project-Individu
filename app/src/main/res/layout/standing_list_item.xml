<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/background1">
    
    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        tools:text="#"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="260dp"
        android:background="@drawable/back_table"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_team_logo_standings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/team_logo_pc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/tv_Team_name_standings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="Manchester United"
            android:textStyle="bold"
            android:textSize="17sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/background8"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/iv_team_logo_standings"
            app:layout_constraintBottom_toBottomOf="@id/iv_team_logo_standings"
            app:layout_constraintStart_toEndOf="@id/iv_team_logo_standings"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        tools:text="Points"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_played"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        tools:text="Played"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_wins"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        tools:text="W"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_draw"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        tools:text="D"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_lose"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        tools:text="L"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_goalsf"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        tools:text="GF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_goalsa"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        tools:text="GA"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/background8"
        android:background="@drawable/back_table"
        android:gravity="center"/>


</LinearLayout>