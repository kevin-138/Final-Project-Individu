<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    tools:context=".presentation.view.trophies.activity.topscorer.LeagueTopScorerActivity">

    <ImageButton
        android:id="@+id/ib_back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/arrrowssc"
        android:background="@color/transparant"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/iv_league_logo_topsc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:src="@drawable/team_logo_pc"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_league_name_topsc"
        app:layout_constraintBottom_toBottomOf="@id/tv_league_type_title"
        app:layout_constraintStart_toStartOf="@id/ib_back_button"
        />

    <TextView
        android:id="@+id/tv_no_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightPurple"
        android:text="@string/no_top_score_available"
        android:textStyle="bold"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tv_league_spinner_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tv_league_name_topsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Parss sd sdsds"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/iv_league_logo_topsc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_back_button"/>

    <TextView
        android:id="@+id/tv_league_type_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/type"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_league_name_topsc"
        app:layout_constraintStart_toStartOf="@+id/tv_league_name_topsc"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/tv_league_type_topsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Cup"
        android:textColor="@color/lightPurple"
        android:textStyle="bold"
        android:layout_marginHorizontal="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/tv_league_name_topsc"
        app:layout_constraintTop_toTopOf="@id/tv_league_type_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_league_type_title"
        app:layout_constraintStart_toEndOf="@id/tv_league_type_title" />

    <TextView
        android:id="@+id/tv_league_spinner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/season"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_league_logo_topsc"
        app:layout_constraintStart_toStartOf="@+id/iv_league_logo_topsc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_spinner_topsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_spinner"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="@id/tv_league_spinner_title"
        app:layout_constraintTop_toBottomOf="@id/tv_league_spinner_title">

        <Spinner
            android:id="@+id/sp_league_season_topsc"
            style="@style/Spinner"
            android:layout_width="130dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
    android:id="@+id/tv_league_topscorer_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/top_scorerh"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textSize="20sp"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toBottomOf="@id/cs_spinner_topsc"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_top_scorer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_league_topscorer_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>