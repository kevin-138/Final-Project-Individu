<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="12dp"
    android:elevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:paddingHorizontal="15dp"
        android:paddingVertical="13dp">

        <TextView
            android:id="@+id/tv_match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2020-02-06"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:background="@drawable/league_live_background"
            android:paddingHorizontal="14dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_fixture_matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2-2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_match_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_match_opponents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Real madrid vs Barcelona"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_fixture_matches"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"/>


        <ImageView
            android:id="@+id/iv_livescore_home_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:src="@drawable/team_logo_pc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_livescore_away_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:src="@drawable/team_logo_pc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>