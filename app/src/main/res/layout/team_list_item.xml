<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/transparant"
    android:layout_margin="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background4"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/iv_team_logo_list"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:src="@drawable/team_logo_pc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Manchester"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/iv_team_logo_list"
            app:layout_constraintStart_toEndOf="@id/iv_team_logo_list"
            app:layout_constraintEnd_toStartOf="@id/iv_purple_button"/>

        <TextView
            android:id="@+id/tv_country_origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="The Guardian"
            android:textColor="@color/lightPurple"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tv_team_name"
            app:layout_constraintStart_toStartOf="@id/tv_team_name" />

        <ImageView
            android:id="@+id/iv_purple_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_next_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>