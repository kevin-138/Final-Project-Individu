<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/transparant"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background7"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/iv_league_logo_list"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:src="@drawable/team_logo_pc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_league_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Premier League"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@+id/iv_league_logo_list"
            app:layout_constraintStart_toEndOf="@id/iv_league_logo_list"
            app:layout_constraintEnd_toStartOf="@id/iv_purple_button"/>

        <TextView
            android:id="@+id/tv_league_type_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@+id/tv_league_name"
            app:layout_constraintStart_toStartOf="@+id/tv_league_name" />

        <TextView
            android:id="@+id/tv_league_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Cup"
            android:textColor="@color/lightPurple"
            android:textStyle="bold"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/iv_purple_button"
            app:layout_constraintTop_toTopOf="@id/tv_league_type_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_league_type_title"
            app:layout_constraintStart_toEndOf="@id/tv_league_type_title" />

        <ImageView
            android:id="@+id/iv_purple_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_next_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>