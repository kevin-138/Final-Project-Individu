<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    tools:context=".presentation.view.trophies.activity.coach.CoachDetailActivity">

    <ImageButton
        android:id="@+id/ib_back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/arrrowssc"
        android:background="@color/transparant"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_coach_current_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_team"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/ib_back_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_team_logo_top"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/team_logo_pc"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_coach_current_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_coach_current_title"
        app:layout_constraintStart_toEndOf="@id/tv_coach_current_title"/>

    <ImageView
        android:id="@+id/iv_coach_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/photo_pc"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_coach_current_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:src="@drawable/border_gradient_side"
        app:layout_constraintStart_toStartOf="@id/iv_coach_photo"
        app:layout_constraintTop_toTopOf="@id/iv_coach_photo"
        app:layout_constraintBottom_toBottomOf="@id/iv_coach_photo"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:src="@drawable/border_gradient_side"
        android:rotationY="180"
        app:layout_constraintEnd_toEndOf="@id/iv_coach_photo"
        app:layout_constraintTop_toTopOf="@id/iv_coach_photo"
        app:layout_constraintBottom_toBottomOf="@id/iv_coach_photo"/>

    <TextView
        android:id="@+id/tv_coach_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Elijandro Marquerez"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/iv_coach_photo"
        app:layout_constraintStart_toEndOf="@id/iv_coach_photo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_coach_nationality_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nationality"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_coach_name"
        app:layout_constraintStart_toStartOf="@id/tv_coach_name"/>

    <TextView
        android:id="@+id/tv_coach_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Italy"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textColor="@color/lightPurple"
        app:layout_constraintTop_toTopOf="@id/tv_coach_nationality_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_coach_nationality_title"
        app:layout_constraintStart_toEndOf="@id/tv_coach_nationality_title"/>

    <TextView
        android:id="@+id/tv_coach_birth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birth_date"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_coach_nationality_title"
        app:layout_constraintStart_toStartOf="@id/tv_coach_name"/>

    <TextView
        android:id="@+id/tv_coach_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12-23-22"
        android:layout_marginStart="5dp"
        android:textColor="@color/lightPurple"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_coach_birth_title"
        app:layout_constraintTop_toTopOf="@id/tv_coach_birth_title"
        app:layout_constraintStart_toEndOf="@id/tv_coach_birth_title"/>

    <TextView
        android:id="@+id/tv_coach_age_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_coach_birth_title"
        app:layout_constraintStart_toStartOf="@id/tv_coach_name"/>

    <TextView
        android:id="@+id/tv_coach_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="34"
        android:layout_marginStart="5dp"
        android:textColor="@color/lightPurple"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_coach_age_title"
        app:layout_constraintTop_toTopOf="@id/tv_coach_age_title"
        app:layout_constraintStart_toEndOf="@id/tv_coach_age_title"/>


    <TextView
        android:id="@+id/tv_coach_career_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/career"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/iv_coach_photo"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:src="@drawable/border_gradient_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_coach_career"
        app:layout_constraintBottom_toBottomOf="@id/rv_coach_career"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_coach_career"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_coach_career_title" />

    <TextView
        android:id="@+id/tv_coach_trophies_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trophies_title"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rv_coach_career"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:src="@drawable/border_gradient_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_coach_trophies"
        app:layout_constraintBottom_toBottomOf="@id/rv_coach_trophies"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_coach_trophies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_coach_trophies_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/trophy_item"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>