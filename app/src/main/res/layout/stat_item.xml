<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_st_title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="adsadada"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_home_sog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb_sog_home"
        app:layout_constraintBottom_toBottomOf="@id/pb_sog_home"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/tv_away_sog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/pb_sog_away"
        app:layout_constraintBottom_toBottomOf="@id/pb_sog_away"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ProgressBar
        android:id="@+id/pb_sog_home"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:min="0"
        android:rotationY="180"
        android:background="@color/white"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp"
        android:progressTint="@color/lightPurple"
        app:layout_constraintTop_toBottomOf="@id/tv_st_title_1"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@id/pb_sog_away"
        tools:ignore="RtlSymmetry" />

    <ProgressBar
        android:id="@+id/pb_sog_away"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:min="0"
        android:progressTint="@color/blue"
        android:background="@color/white"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_st_title_1"
        app:layout_constraintStart_toEndOf="@id/pb_sog_home"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>