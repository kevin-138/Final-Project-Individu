<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/transparant"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background6"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iv_coach_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/photo_pc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_side"
            app:layout_constraintStart_toStartOf="@id/iv_coach_photo"
            app:layout_constraintTop_toTopOf="@id/iv_coach_photo"
            app:layout_constraintBottom_toBottomOf="@id/iv_coach_photo"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_side"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="@id/iv_coach_photo"
            app:layout_constraintTop_toTopOf="@id/iv_coach_photo"
            app:layout_constraintBottom_toBottomOf="@id/iv_coach_photo"/>

        <TextView
            android:id="@+id/tv_coach_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Elijandro Marquerez"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_coach_photo"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_coach_nationality_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nationality"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_coach_name"
            app:layout_constraintStart_toStartOf="@id/tv_coach_name"/>

        <TextView
            android:id="@+id/tv_coach_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Italy"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="@color/lightPurple"
            app:layout_constraintTop_toBottomOf="@id/tv_coach_name"
            app:layout_constraintStart_toEndOf="@id/tv_coach_nationality_title"/>

        <TextView
            android:id="@+id/tv_coach_age_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_coach_nationality_title"
            app:layout_constraintStart_toStartOf="@id/tv_coach_name"/>

        <TextView
            android:id="@+id/tv_coach_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            app:layout_constraintBottom_toBottomOf="@+id/tv_coach_age_title"
            app:layout_constraintTop_toTopOf="@+id/tv_coach_age_title"
            app:layout_constraintStart_toEndOf="@+id/tv_coach_age_title"/>

        <TextView
            android:id="@+id/tv_coach_bdate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_date"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_coach_age_title"
            app:layout_constraintStart_toEndOf="@id/tv_coach_age"/>

        <TextView
            android:id="@+id/tv_player_bdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11-02-23"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            app:layout_constraintBottom_toBottomOf="@id/tv_coach_bdate_title"
            app:layout_constraintTop_toTopOf="@id/tv_coach_bdate_title"
            app:layout_constraintStart_toEndOf="@id/tv_coach_bdate_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>