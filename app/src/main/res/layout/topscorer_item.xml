<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/transparant"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background3"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iv_team_logo_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/team_logo_pc"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/iv_player_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/photo_pc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_side"
            app:layout_constraintStart_toStartOf="@id/iv_player_photo"
            app:layout_constraintTop_toTopOf="@id/iv_player_photo"
            app:layout_constraintBottom_toBottomOf="@id/iv_player_photo"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:src="@drawable/border_gradient_side"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="@id/iv_player_photo"
            app:layout_constraintTop_toTopOf="@id/iv_player_photo"
            app:layout_constraintBottom_toBottomOf="@id/iv_player_photo"/>

        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Elijandro Marquerez"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_player_photo"
            app:layout_constraintEnd_toStartOf="@id/iv_team_logo_top"
            />

        <TextView
            android:id="@+id/tv_player_nationality_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nationality"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_player_name"
            app:layout_constraintStart_toStartOf="@id/tv_player_name"/>

        <TextView
            android:id="@+id/tv_player_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Italy"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="@color/lightPurple"
            app:layout_constraintEnd_toStartOf="@id/iv_team_logo_top"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_player_name"
            app:layout_constraintStart_toEndOf="@id/tv_player_nationality_title"/>


        <TextView
            android:id="@+id/tv_player_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_player_nationality_title"
            app:layout_constraintStart_toStartOf="@id/tv_player_name"/>

        <TextView
            android:id="@+id/tv_player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="attacker"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            app:layout_constraintBottom_toBottomOf="@+id/tv_player_position_title"
            app:layout_constraintTop_toTopOf="@+id/tv_player_position_title"
            app:layout_constraintStart_toEndOf="@+id/tv_player_position_title"/>

        <TextView
            android:id="@+id/tv_player_rating_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_position_title"
            app:layout_constraintStart_toStartOf="@id/tv_player_name"/>

        <TextView
            android:id="@+id/tv_player_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            app:layout_constraintBottom_toBottomOf="@+id/tv_player_rating_title"
            app:layout_constraintTop_toTopOf="@+id/tv_player_rating_title"
            app:layout_constraintStart_toEndOf="@+id/tv_player_rating_title"/>

        <TextView
            android:id="@+id/tv_player_appearances_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appearances"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/tv_player_rating_title"
            app:layout_constraintStart_toStartOf="@id/tv_player_nationality"/>

        <TextView
            android:id="@+id/tv_player_appearances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="72"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            app:layout_constraintBottom_toBottomOf="@+id/tv_player_appearances_title"
            app:layout_constraintTop_toTopOf="@+id/tv_player_appearances_title"
            app:layout_constraintStart_toEndOf="@+id/tv_player_appearances_title"/>

        <TextView
            android:id="@+id/tv_player_goals_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_goals"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_rating_title"
            app:layout_constraintStart_toStartOf="@id/tv_player_nationality_title"/>

        <TextView
            android:id="@+id/tv_player_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="72"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightPurple"
            app:layout_constraintBottom_toBottomOf="@+id/tv_player_goals_title"
            app:layout_constraintTop_toTopOf="@+id/tv_player_goals_title"
            app:layout_constraintStart_toEndOf="@+id/tv_player_goals_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>